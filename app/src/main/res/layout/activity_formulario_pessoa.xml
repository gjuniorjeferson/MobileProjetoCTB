<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adapter.android.dominando.mobileprojetoctb.cadastros.Pessoa.FormularioPessoaActivity">

    <EditText
        android:id="@+id/edtNomePessoa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtEmailPessoa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtNomePessoa"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNomePessoa" />

    <EditText
        android:id="@+id/edtSenhaPessoa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/edtEmailPessoa"
        android:layout_below="@+id/edtEmailPessoa"
        android:ems="10"
        android:hint="@string/senha"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailPessoa" />

    <Button
        android:id="@+id/btnSalvarPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnExcluirPessoa"
        android:layout_alignBottom="@+id/btnExcluirPessoa"
        android:layout_toStartOf="@+id/btnExcluirPessoa"
        android:text="@string/salvar"
        app:layout_constraintEnd_toStartOf="@+id/btnExcluirPessoa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSenhaPessoa" />

    <Button
        android:id="@+id/btnExcluirPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCancelarPessoa"
        android:layout_alignBottom="@+id/btnCancelarPessoa"
        android:layout_toStartOf="@+id/btnCancelarPessoa"
        android:text="@string/excluir"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelarPessoa"
        app:layout_constraintTop_toBottomOf="@+id/edtSenhaPessoa" />

    <Button
        android:id="@+id/btnCancelarPessoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edtSenhaPessoa"
        android:layout_marginTop="53dp"
        android:text="@string/cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSenhaPessoa" />
</RelativeLayout>
